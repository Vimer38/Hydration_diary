<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" /> <!-- Установите радиус закругления -->
            <solid android:color="#e0e0e0" /> <!-- Цвет фона прогресс-бара -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="10dp" /> <!-- Установите радиус закругления -->
                <solid android:color="?attr/colorPrimary" /> <!-- Цвет прогресса берется из темы -->
            </shape>
        </clip>
    </item>
</layer-list>