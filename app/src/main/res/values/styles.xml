<resources>
    <!-- Base application theme -->
    <!-- This style is now in themes.xml -->

    <!-- No ActionBar theme -->
    <!-- This style is now in themes.xml -->

    <!-- AppBar style -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <!-- Color scheme themes -->
    <style name="Theme.HealthyNutrition.Default" parent="Theme.HealthyNutrition">
        <!-- Colors are defined in the base Theme.HealthyNutrition in themes.xml -->
    </style>

    <style name="Theme.HealthyNutrition.Blue" parent="Theme.HealthyNutrition">
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryDark">@color/blue_primary_dark</item>
        <item name="colorAccent">@color/blue_accent</item>
        <item name="android:statusBarColor">@color/blue_primary_dark</item>
        <item name="android:navigationBarColor">@color/blue_primary_dark</item>
    </style>

    <style name="Theme.HealthyNutrition.Green" parent="Theme.HealthyNutrition">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryDark">@color/green_primary_dark</item>
        <item name="colorAccent">@color/green_accent</item>
        <item name="android:statusBarColor">@color/green_primary_dark</item>
        <item name="android:navigationBarColor">@color/green_primary_dark</item>
    </style>

    <style name="Theme.HealthyNutrition.Purple" parent="Theme.HealthyNutrition">
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryDark">@color/purple_primary_dark</item>
        <item name="colorAccent">@color/purple_accent</item>
        <item name="android:statusBarColor">@color/purple_primary_dark</item>
        <item name="android:navigationBarColor">@color/purple_primary_dark</item>
